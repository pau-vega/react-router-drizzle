{
  "name": "react-router-drizzle",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "format": "turbo format",
    "typecheck": "turbo typecheck",
    "nuke": "find . -type d \\( -name node_modules -o -name dist -o -name build -o -name .turbo -o -name .next -o -name .cache -o -name coverage \\) -prune -exec rm -rf '{}' +",
    "phoenix": "pnpm nuke && pnpm install",
    "update:shadcn": "pnpm --filter @react-router-drizzle/ui exec npx shadcn@latest diff",
    "update:skills": "npx skills update"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.4",
    "rimraf": "^6.1.3",
    "turbo": "^2.8.12",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.29.3",
  "dependencies": {
    "@types/node": "^25.3.2"
  }
}
