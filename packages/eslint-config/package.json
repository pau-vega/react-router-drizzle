{
  "name": "@monorepo-template/eslint-config",
  "version": "1.0.0",
  "license": "ISC",
  "type": "module",
  "private": false,
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@eslint-react/eslint-plugin": "^2.12.2",
    "@eslint/js": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.6.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.3.0",
    "typescript-eslint": "^8.56.0"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "eslint": "^10.0.0",
    "eslint-plugin-react-refresh": "^0.5.0",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1"
  }
}
